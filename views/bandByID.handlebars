<div class="band-card card" style="text-align:center;">
    <container class="row">
        <div class="col-md-4">
            <img src="..." class="card-img-top" alt="...">
        </div>
        <div class="card-body col-md-4">
            <header class="band-card-header">{{band.name}}</header>
            <ul>
                <li>{{band.genre}}</li>
                <li>{{band.website}}</li>
                <li>{{band.phone}}</li>
                <li>{{User.band.email}}</li>
            </ul>
        </div>
        <div class="col-md-4">{{band.bio}}</div>
    </container>
</div>