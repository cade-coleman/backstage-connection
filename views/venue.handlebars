{{#each venues as |venue| }}
<div class="card mb-3" style="max-width: 750px; margin-left: auto; margin-right: auto; margin-bottom: 1rem">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="/assets/image.jpeg" alt="...">
        </div>
        <div class="col-md-4">
            <header class="venue-card-header">{{venue.name}}</header>
            <ul>
                <li>{{venue.location}}</li>
                <li>{{venue.website}}</li>
                <li>{{venue.phone}}</li>
                <li>{{venue.email}}</li>
            </ul>
        </div>
        </div>
        <div class="col-md-4">{{venue.bio}}</div>
    
</div>
{{/each}}
